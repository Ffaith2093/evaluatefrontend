.all{
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
}
.lineBlock{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 15rpx;
  background: var(--fontColorOrange);
}
.topText{
  margin-bottom: 15rpx;
}
.topText>text{
  font-size: 30rpx;
  margin-right: 14rpx;
}
.errorText{
  color: var(--componnentLightOrange);
  margin-bottom: 10rpx;
}
.studentItem{
  height: 80rpx;
  border-radius: 15rpx;
  padding-left: 20rpx;
  background: var(--shallowYellowBackground);
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.stuID{
  font-size: 28rpx;
  color: var(--fontColorBlack);
  margin-right: 20rpx;
}
.stuName{
  font-size: 30rpx;
