/* pages/identity/identity.wxss */
.backColor{
  background: linear-gradient(to bottom right,var(--deepBackgroundBlue), var(--shallowBackgroundBlue));
  display: flex;
  flex-direction: column;
  height: 500rpx;
  border-radius: 0 0 60rpx 60rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
}
.innerContent{
  position: absolute;
  top: 160rpx;
}
.TopWord{
  display: flex;
  flex-direction: column;
}
.txtFir{
  color: #FFFFFF;
  position: relative;
  font-size: 17px;
  left: 20rpx;
  margin-bottom: 30rpx;
}
.txtSec{
  color: #FFFFFF;
  font-size: 20px;
  left: 0;
}
.middleSelect{
  background: #f7f6fb;
  position: relative;
  top: 50rpx;
  height: 528rpx;
  border-radius: 30rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.buttonIdentity{
  background: #FFFFFF;
  display: flex;
  align-items: center;
  flex-direction: row;
  height: 128rpx;
  width: 332rpx;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
  box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.4);
}
.buttonIdentity:hover{
  background: #e9e8ec;
}
.buttonImg{
  height: 66rpx;
  margin-left: 45rpx;
  margin-right: 32rpx;
  width: 66rpx;
}
.buttonTxt{
  font-size: 40rpx;
  font-weight: normal;
  color: #707070;
}
.bottomBtn{
  position: relative;
  display: flex;
  top: 140rpx;
  background-color: #FFFFFF;
  height: 100rpx;
  width: 384rpx;
  box-shadow: 3px 5px 6px 0px rgba(0, 0, 0, 0.4);
  align-items: center;
  justify-content: center;
  border-radius: 4px;
}
.getImg{
  height: 60rpx;
  width: 60rpx;
  position: relative;
  margin-left: 10rpx;
  margin-right: 18rpx;
}
.getTxt{
  position: relative;
  font-size: 36rpx;
  font-weight: normal;
  color: #101010;
}
.submitPress{
  background: #F7F6FB;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userinfo-btn{
  margin-top: 50rpx;
  background: none !important;
  color: #fff !important;
  font-size: 40rpx;
}
.userinfo-nickname {
  color: #000000;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}
.mask {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #F7F5F4;
  opacity: 0.9;
  z-index: 2;
}
.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.clickBtn{
  position: absolute;
  height: 100rpx;
  width: 400rpx;
  border-radius: 30rpx;
  top: 50%;
  background: var(--componnentOrange);
  color: var(--fontColorWhite);
  z-index: 999;
}
.clickBtn::after{
  border: none;
}