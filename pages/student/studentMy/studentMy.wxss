.all{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.myTopBack{
  height: 400rpx;
  background: linear-gradient(to bottom right,var(--deepBackgroundBlue), var(--shallowBackgroundBlue));
  border-radius: 0px 0px 20px 20px;
}
.back1{
  position: relative;
  top: 60rpx;
  width: 100%;
  height: 240rpx;
}
.middleBlock{
  height: 500rpx;
  width: 90%;
  display: flex;
  position: absolute;
  top: 230rpx;
  background: var(--componentLightgrey);
  border-radius: 20px;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;  /*need modify*/
  margin-left: 5%;
  margin-right: 5%;
}
.myProfile{
  position: absolute;
  top: -75rpx;  /*need modify*/
  height: 180rpx;
  width: 180rpx;
  border-radius: 100rpx;
}
.centerText{
  position: relative;
  display: flex;
  flex-direction: row;
  margin-bottom: 30rpx;
}
.nameText{
  font-size: 48rpx;
  text-align: center;
  color: var(--fontColorBlack);
}
.identityImg{
  background: var(--componnentOrange);
  width: 120rpx;
  height: 60rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  text-align: center;
  margin-left: 20rpx;
  line-height: 60rpx;
  color: var(--fontColorWhite);

}
.infoBlock{
  height: 260rpx;
  background: var(--buttonPurple);
  width: 80%;
  display: flex;
  padding-left: 30rpx;
  flex-direction: column;
  border-radius: 50rpx;
  justify-content: space-around;
}
.schoolImg{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.schoolTitle{
  font-size: 28rpx;
  color: var(--fontColorWhite);
  margin-right: 15rpx;
}
.schoolName{
  font-size: 24rpx;
  color: var(--fontColorWhite);
  font-weight: 600;
}
.centerLine{
  height: 1rpx;
  width: 60%;
  background: var(--fontColorWhite);
}
.detailBlock{
  display: flex;
  flex-direction: row;
  align-items: center;
}